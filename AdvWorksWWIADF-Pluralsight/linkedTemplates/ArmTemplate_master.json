{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AdvWorksWWIADF-Pluralsight"
		},
		"AdvWorksBlobLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdvWorksBlobLS'"
		},
		"AdventureWorks_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdventureWorks'"
		},
		"AdventureWorksLT_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdventureWorksLT'"
		},
		"MergeDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MergeDB'"
		},
		"WWImporters_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'WWImporters'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "AdvWorksWWIADF-Pluralsight_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AdvWorksBlobLS_connectionString": {
						"value": "[parameters('AdvWorksBlobLS_connectionString')]"
					},
					"AdventureWorks_connectionString": {
						"value": "[parameters('AdventureWorks_connectionString')]"
					},
					"AdventureWorksLT_connectionString": {
						"value": "[parameters('AdventureWorksLT_connectionString')]"
					},
					"MergeDB_connectionString": {
						"value": "[parameters('MergeDB_connectionString')]"
					},
					"WWImporters_connectionString": {
						"value": "[parameters('WWImporters_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "AdvWorksWWIADF-Pluralsight_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'AdvWorksWWIADF-Pluralsight_ArmTemplate_0')]"
			]
		}
	]
}